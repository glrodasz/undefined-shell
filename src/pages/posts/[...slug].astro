---
import { type CollectionEntry, getCollection } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import { calculateReadingTime } from "../index.astro";
import { type Locale } from "../../i18n/config";

export async function getStaticPaths() {
  // Get English posts (default locale)
  const enPosts = await getCollection("posts", ({ slug }) => {
    return slug.startsWith("en/");
  });
  return enPosts.map((post) => ({
    params: { slug: post.slug.replace("en/", "") }, // Remove en/ prefix from URL
    props: { post, locale: "en" }
  }));
}

type Props = {
  post: CollectionEntry<"posts">;
  locale: Locale;
};

const { post, locale } = Astro.props;
const readingTime = calculateReadingTime(post.body);
const { Content } = await post.render();
---

<BlogPost {...post.data} readingTime={readingTime} locale={locale}>
  <Content />
</BlogPost>
