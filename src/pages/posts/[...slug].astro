---
import { type CollectionEntry } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import { calculateReadingTime, generateSlugPaths } from "../../utils/content";
import { type Locale, DEFAULT_LOCALE } from "../../i18n/config";

export async function getStaticPaths() {
  return await generateSlugPaths(DEFAULT_LOCALE);
}

type Props = {
  post: CollectionEntry<"posts">;
  locale: Locale;
};

const { post, locale } = Astro.props;
const readingTime = calculateReadingTime(post.body);
const { Content } = await post.render();
---

<BlogPost {...post.data} readingTime={readingTime} locale={locale}>
  <Content />
</BlogPost>
