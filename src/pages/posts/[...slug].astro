---
import { type CollectionEntry } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import { calculateReadingTime } from "../index.astro";
import { type Locale, DEFAULT_LOCALE } from "../../i18n/config";
import { getPostsByLanguage, getCleanSlug } from "../../utils/content";

export async function getStaticPaths() {
  // Get English posts (default locale)
  const enPosts = await getPostsByLanguage(DEFAULT_LOCALE);
  
  return enPosts.map((post) => ({
    params: { slug: getCleanSlug(post.slug) },
    props: { post, locale: DEFAULT_LOCALE }
  }));
}

type Props = {
  post: CollectionEntry<"posts">;
  locale: Locale;
};

const { post, locale } = Astro.props;
const readingTime = calculateReadingTime(post.body);
const { Content } = await post.render();
---

<BlogPost {...post.data} readingTime={readingTime} locale={locale}>
  <Content />
</BlogPost>
