---
import { type CollectionEntry, getCollection } from "astro:content";
import BlogPost from "../../../layouts/BlogPost.astro";
import { calculateReadingTime } from "../../index.astro";
import { type Locale } from "../../../i18n/config";

export async function getStaticPaths() {
  // Get Spanish posts
  const esPosts = await getCollection("posts", ({ slug }) => {
    return slug.startsWith("es/");
  });
  return esPosts.map((post) => ({
    params: { slug: post.slug.replace("es/", "") }, // Remove es/ prefix from URL
    props: { post, locale: "es" }
  }));
}

type Props = {
  post: CollectionEntry<"posts">;
  locale: Locale;
};

const { post, locale } = Astro.props;
const readingTime = calculateReadingTime(post.body);
const { Content } = await post.render();
---

<BlogPost {...post.data} readingTime={readingTime} locale={locale}>
  <Content />
</BlogPost>
