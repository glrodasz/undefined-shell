---
import { type CollectionEntry, getCollection } from "astro:content";
import BlogPost from "../../../layouts/BlogPost.astro";
import { calculateReadingTime } from "../../index.astro";

export async function getStaticPaths() {
  // Get Spanish posts
  const esPosts = await getCollection("posts/es");
  return esPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post, locale: "es" }
  }));
}

type Props = {
  post: CollectionEntry<"posts/es">;
  locale: string;
};

const { post, locale } = Astro.props;
const readingTime = calculateReadingTime(post.body);
const { Content } = await post.render();
---

<BlogPost {...post.data} readingTime={readingTime} locale={locale}>
  <Content />
</BlogPost>
