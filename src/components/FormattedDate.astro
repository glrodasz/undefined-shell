---
interface Props {
  date: Date;
  leadingComma?: boolean;
}

const { date, leadingComma } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("es", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  }{leadingComma ? ", " : ""}
</time>
