---
import { getLocaleFromUrl } from "../i18n/config";

interface Props {
  date: Date;
  leadingComma?: boolean;
  locale?: string;
}

const { date, leadingComma, locale } = Astro.props;

// Get locale from URL if not provided as prop
const currentLocale = locale || getLocaleFromUrl(Astro.url);
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(currentLocale, {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  }{leadingComma ? ", " : ""}
</time>
